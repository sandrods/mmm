<% content_for :body_content_title do %>
  <%= @noticia.titulo %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Titulo</h1>
    <p>
      <%=raw @noticia.titulo %>
    </p>
  </section>
  <section>
    <h1>Corpo</h1>
    <p>
      <%=raw @noticia.corpo %>
    </p>
  </section>
  <section>
    <h1>Imagem</h1>
    <p>
      <%= image_fu @noticia.imagem, nil %>
    </p>
  </section>
  <section>
    <h1>Data Publicacao</h1>
    <p>
      <%=raw @noticia.data_publicacao %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="noticias">
      <% @noticias.each do |noticia| %>
        <li>
          <%= link_to noticia.titulo, noticia_path(noticia) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
