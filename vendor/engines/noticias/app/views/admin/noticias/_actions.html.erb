<ul>
  <% if Admin::NoticiasController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_noticias_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_noticia_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::NoticiasController.sortable? and Noticia.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Noticias"),
                 admin_noticias_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Noticias"),
                 admin_noticias_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>